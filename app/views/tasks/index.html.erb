<h1>タスク一覧</h1>
<%= form_with(model: @tasks, url: tasks_path, method: :get, local: true) do|form| %>
  <%= form.text_field :title %>
  <%= form.select :status, Task.statuses.keys, {prompt: '選択してください'} %>
  <%= form.submit 'Search'%>
<% end %>

<% @tasks.each do |task| %>
  <p>タイトル <%= task.title %></p>
  <p>内容 <%= task.content %></p>
  <p>終了期限 <%= task.expired_at %></p>
  <p>状態 <%= task.status %></p>
  <p><%= link_to '編集', edit_task_path(task) %></p>
  <p><%= link_to '削除', task, method: :delete, data: { confirm: 'Are you sure?' } %></p>
  <p><%= link_to '詳細', task_path(task) %></p>
<% end %>
<%= link_to "終了期限でソートする", tasks_path(sort_expired: "true") %>
<%= link_to "新規", new_task_path %>
