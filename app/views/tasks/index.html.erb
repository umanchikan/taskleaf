<h1>タスク一覧</h1>
<% @tasks.each do |task| %>
  <p>タイトル <%= task.title %></p>
  <p>内容 <%= task.content %></p>
  <p><%= link_to 'Edit', edit_task_path(task) %></p>
  <p><%= link_to 'Destroy', task, method: :delete, data: { confirm: 'Are you sure?' } %></p>
  <p><%= link_to 'Show', task_path(task) %></p>
<% end %>

